<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./includes/CommonHead.ejs') %>
  <link rel="stylesheet" href="/css/imageUpload.css">
  <title>
    <%= pageTitle %>
  </title>
</head>

<body>
  <%- include('./includes/Navbar.ejs') %>
    <div class="container">
      <div class="mt-3">
        <form action="/image-upload" method="POST" enctype="multipart/form-data" id="imageUploadForm">
          <label for="image" class="form-label">Select an image (jpeg, jpg, png supported)</label>
          <input class="form-control" type="file" id="imageInput">
          <div class="d-grid gap-2">
          <button class="btn btn-primary mt-3" type="submit" id="uploadBtn">Upload Image</button>
          </div>
          <div class="text-center mt-3 imagePreviewContainer">
          <img src="" alt="" id="imagePreview" class="mt-3">
          </div>
        </form>
      </div>
    </div>

  <script src="/js/imageUpload.js"></script>
  <script src="/js/cropper.min.js"></script>
  <script src="/js/jquery-3.6.0.min.js"></script>
</body>

</html>